
<p id="notice"><%= notice %></p>

<form>
  <div class="form-group">
    <strong><%= label_tag nil, @mining_type.class.human_attribute_name(:description) %></strong>
    <%= text_field_tag nil, @mining_type.description, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <strong><%= label_tag nil, @mining_type.class.human_attribute_name(:acronym) %></strong>
    <%= text_field_tag nil, @mining_type.acronym, class:"form-control", disabled: true %>
  </div>
  <div class="form-group">
    <strong><%= label_tag nil, @mining_type.class.human_attribute_name(:coins) %></strong>
    <% if @mining_type.coins.any? %>
      <table class="table table-hover table-sm">
        <thead class="thead-dark">
          <tr>
            <th><%= t('activerecord.attributes.coin.description') %> </th>
            <th><%= t('activerecord.attributes.coin.acronym') %></th>
            <th><%= t('activerecord.attributes.coin.image') %></th>
          </tr>
        </thead>

        <tbody>
          <% @mining_type.coins.each do |coin|%>
            <tr>
              <td><%= coin.description %></td>
              <td><%= coin.acronym %></td>
              <td><img src="<%= coin.url_image %> "width=35 height=35 /></td>
              </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p> <%= t('mining_type.no_coins') %> </p>
    <% end %>

  </div>
</form>

<%= link_to t('links.edit'), edit_mining_type_path(@mining_type), class:'btn btn-primary' %> |
<%= link_to t('links.back'), mining_types_path, class:'btn btn-primary' %>